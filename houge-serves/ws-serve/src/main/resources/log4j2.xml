<Configuration status="WARN">
  <Properties>
    <Property name="appName">houge</Property>
    <Property name="logsDir">/var/log/${appName}</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} %level{length=1} [%t] %c{5} %L; %msg%n"/>
    </Console>

    <RollingFile name="FileError" fileName="${logsDir}/${appName}-error.log"
      filePattern="${logsDir}/${appName}-error-%d{yyyy-MM-dd}.log">
      <PatternLayout>
        <pattern>[%-1level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
      <Filters>
        <ThresholdFilter level="ERROR" onMatch="ACCEPT"/>
      </Filters>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="io.netty" level="INFO"/>
    <Logger name="io.netty.buffer.PooledByteBufAllocator" level="DEBUG"/>

    <Root level="INFO">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
